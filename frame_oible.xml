<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_oi_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/oibleImgCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:foreground="@drawable/background_gradient_bottom"
        android:scaleType="fitCenter"
        android:src="@drawable/temp_profile" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/oibleImgTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/temp_title_light" />

        <TextView
            android:id="@+id/oibleBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/black"
            android:letterSpacing="0.1"
            android:text="J. K. ROWLING"
            android:textColor="@color/primary"
            android:textSize="10sp" />

        <FrameLayout
            android:id="@+id/progressBarHigh"
            android:layout_width="250dp"
            android:layout_height="18dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/background_round_8_stroke_2"
            android:backgroundTint="#80FFFFFF">

            <View
                android:layout_width="62.5dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:alpha="0.5"
                android:background="@drawable/background_round" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="25%"
                android:textColor="@color/primary"
                android:textSize="12sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/start_continue"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/background_round"
            android:backgroundTint="@color/main"
            android:drawableStart="@drawable/ic_play"
            android:drawablePadding="4dp"
            android:fontFamily="@font/bold"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="20dp"
            android:text="Continuar"
            android:textColor="@color/primary"
            android:textSize="15sp" />
    </LinearLayout>


</FrameLayout>